/* pages/newsDetail/index.wxss */
@import"../../wxParse/wxParse.wxss";
page{
  padding-top: 44rpx;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.title{
  font-size: 40rpx;
  color: #000000;
  width: 100%;
  display: block;
  text-align: center;
  padding: 0 20rpx;
  font-weight: bold;
  box-sizing: border-box;
}
.video{
  width: 100%;
}
.content{
  padding: 50rpx 0 0 0;
  box-sizing: border-box;
}
.content .wxParse-p image{
  width: 100% !important;
  display: block;
}
.content .wxParse-p{
  padding: 0 40rpx;
  margin-top:24rpx;
  box-sizing: border-box;
}
.content .wxParse-p view{
  /* display: inline-block; */
  font-size: 30rpx;
  color: #636363;
}
.content image{
  width: 100%;
  margin-top: 24rpx;
}
.likebox{
  margin-top: 70rpx;
  text-align: center;
}
.likebox image{
  display: block;
  width: 72rpx;
  height: 60rpx;
  margin: 0 auto;
}
.likebox view{
  font-size: 28rpx;
  color: #C4C4C4;
  display: inline-block;
  margin: 20rpx auto;
}
.likebox view text{
  font-size: 28rpx;
  color: #000;
}
.comment{
  /* padding: 0 40rpx;
  box-sizing: border-box; */
}
.comment .placeholder_box{
  background: #f1f1f1;
  width: 100%;
  height: 20rpx;
  margin-top: 80rpx;
}
.comment_list{
  padding: 40rpx 40rpx 0 40rpx;
  box-sizing: border-box;
  /* position: relative; */
}
.comment_list image{
  width: 72rpx;
  height: 72rpx;
  margin-right: 20rpx;
  border-radius: 72rpx;
  position: absolute;
  left: 0;
}
.comment_list image{
  width: 72rpx;
  height: 72rpx;
  margin-right: 20rpx;
  border-radius: 72rpx;
  position: absolute;
  left: 30rpx;
}
.comment_list view{
  width: 100%;
  padding-left: 90rpx;
  box-sizing: border-box;
}
.comment_list view text{
  display: block;
}
.comment_list view .comment_list_name{
  color: #5b6b8f;
  font-size: 28rpx;
}
.comment_list view .comment_list_time{
  font-size: 24rpx;

  color: #909090;
}
.comment_list view .comment_list_comment{
  font-size: 32rpx;
  margin-top: 8rpx;
  color: #000;
}
.comment_title{
  width: 100%;
  height: 80rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f2f2f2;
}
.comment_title text{
  height: 36rpx;
  display: inline-block;
  line-height: 36rpx;
  font-size: 32rpx;
  color: #333;
  border-left: 8rpx solid #fcdd4f;
  padding-left: 15rpx;
  box-sizing: border-box;
  margin-top: 22rpx;
}
.wucomment{
  text-align: center;
  padding: 80rpx 0;
}
.wucomment image{
  width: 220rpx;
  height: 192rpx;
}
.wucomment text{
  display: block;
  width: 100%;
  text-align: center;
  margin-top: 5rpx;
  font-size: 28rpx;
  color: #ABABAB;
}
.nocomment{
  width: 100%;
  display: block;
  text-align: center;
  padding: 80rpx 0;
  box-sizing: border-box;
}
.nocomment view{
  display: inline-block;
}
.nocomment image{
  width: 45rpx;
  height: 45rpx;
  display: block;
  float: left;
  margin-right: 10rpx;
}
.nocomment text{
  height: 45rpx;
  display: inline-block;
  font-size: 28rpx;
  color: #999;
  float: left;
  line-height: 58rpx;
}

.foter{
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #f1f1f1;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  padding: 0 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.foter view{
  height: 100rpx;
  float: left;
}
.foter view button{
  padding: 0;
  background: transparent;
}
.foter view button::after{
  border: none;
}
.foter_l{
  width: 416rpx;
}
.foter_l image{
  width: 40rpx;
  margin-top: 30rpx;
  margin-right: 16rpx;
  float: left;
  display: block;
}
.foter_l input{
  width: 360rpx;
  height: 100rpx;
  font-size: 30rpx;
  color: #333;
}
.foter_r{
  width: 254rpx;
}
.foter_r view{
  width: 84rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.foter_r image{
  width: 40rpx;
  float: left;
  display: block;
}