page{
  background: #fafafa;
}
.statusTxt{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 28rpx;
  color: #7F7F7F;
  font-weight: 200;
}
.navigationBar{
  width: 100%;
  height: 80rpx;
  background: #FFDD1D;
  display: flex;
  justify-content: space-around;
  position: fixed;
  top: 0;
}
.navigationBar>view{
  display: flex;
  align-items: flex-end;
}
.navigationBar text{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #978210;
  position: relative;
}
.navigationBar .active text{
  font-weight: bold;
  color: #000;
}
.navigationBar .active text::after{
  content: '';
  width: 100%;
  height: 4rpx;
  background: #000;
  position:absolute;
  left: 0;
  bottom: 0;
}

.content{
  padding-top: 80rpx;
  box-sizing: border-box;
}
.adopter{
  width: 100%;
  padding: 40rpx 40rpx 0 40rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 20rpx;
}
.adopter_info{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.adopter_info .name{
  display: flex;
  align-items: center;
}
.adopter_info .name image{
  width: 84rpx;
  height: auto;
  border-radius: 100%;
}
.adopter_info .name text{
  font-size: 28rpx;
  font-weight: bold;
  color: #575656;
  margin-left: 12rpx;
}
.adopter_info .time{
  font-size: 24rpx;
  color: #A3A3A3;
  display: flex;
  align-items: center;
}
.adopter .h1{
  font-size: 32rpx;
  color: #303030;
  margin: 24rpx 0 24rpx 0;
}
.adopter .card{
  margin: 24rpx 0 0 0;
}
.adopter .statusBtn{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
}
.adopter .statusBtn view{
  display: flex;
  align-items: center;
}
.adopter .statusBtn view image{
  width: 36rpx;
  height: auto;
}
.adopter .statusBtn view text{
  font-size: 28rpx;
  color: #383535;
  margin-left: 16rpx;
}