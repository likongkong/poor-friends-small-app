
.nav{
  width: 100%;
  height: 90rpx;
  background: #FFDD1D;
  display: flex;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
}
.nav>view{
  width: 244rpx;
  display: flex;
  justify-content: center;
}
.nav>view text{
  display: block;
  width: 130rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  color: #000000;
  position: relative;
}
.nav .active text{
  font-weight: bold;
}
.nav .active text::after{
  content: '';
  display: block;
  width: 130rpx;
  height: 4rpx;
  background: #000;
  position: absolute;
  bottom: 0;
  left: 0;
}

.content{
  margin-top: 90rpx;
  padding-top: 40rpx;
  box-sizing: border-box;
}

.c_list_b{
  margin-top: 20rpx;
  padding: 30rpx 40rpx;
  background: #fff;
  box-sizing: border-box;
}
.c_dan_list{
  width: 100%;
  overflow: hidden;
}
.c_dan_list>view{
  float: left;
}
.c_dan_list_l{
  width: 431rpx;
  height: 180rpx;
  padding-right: 35rpx;
  box-sizing: border-box;
  position: relative;
}
.c_dan_list_l>text{
  display: block;
  font-size: 32rpx;
  color: #000000;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.c_dan_list_l .author_info{
  width: 100%;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  left: 0;
}
.c_dan_list_l .author_info image{
  width: 40rpx;
  height: 40rpx;
  /* border-radius: 52rpx; */
  display: inline-block;
  float: left;
  margin-top: 2rpx;
}
.c_dan_list_l .author_info .name{
  float: left;
  width: 182rpx;
  display: inline-block;
  font-size: 24rpx;
  color: #999;
  margin-left: 5rpx;
  height: 52rpx;
  line-height: 52rpx;
  overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.c_dan_list_l .author_info .time{
  height: 52rpx;
  font-size: 24rpx;
  line-height: 52rpx;
  color: #000;
  opacity: .3;
  float: right;
  display: inline-block;
  padding-right: 40rpx;
  box-sizing: border-box;
}
.c_dan_list_r{
