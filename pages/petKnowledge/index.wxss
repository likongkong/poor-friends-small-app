.species{
  width: 144rpx;
  height: 76rpx;
  background: #fff;
  border-radius: 4rpx;
}
.species text{
  width: 100%;
  height: 76rpx;
  display: block;
  line-height: 76rpx;
  padding: 0 30rpx;
  color: #b1b1b1;
  font-size: 24rpx;
  text-align: center;
  box-sizing: border-box;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.head-search{
  width: 100%;
  height: 136rpx;
  background: #FFDD1D;
  padding: 40rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search{
  width: 486rpx;
  height: 76rpx;
  background: #fff;  
  border-radius: 4rpx;
  float: right;
  padding-left: 69rpx;
  position: relative;
  box-sizing: border-box;
}
.search-input{
  height: 76rpx;
  text-align: left;
  font-size: 24rpx;
  color: #A9A9A9;
  box-sizing: border-box;
}
.search-icon{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 26rpx;
  left: 35rpx;
  z-index: 10;
}
.search-placeholder{
  color: #A9A9A9;
  font-weight: 100;
}



.nav{
  width: 100%;
  height: 214rpx;
  background: #f2f2f2;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 34rpx 0 34rpx;
  box-sizing: border-box;
  position: fixed;
  top: 136rpx;
  left: 0;
  z-index: 10;
}
.nav>view{
  display: inline-block;
  text-align: center;
  position: relative;
}
.navPic{
  width: 90rpx;
  height: 90rpx;
  display: block;
}
.active .navPic{
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin-top: -5rpx;
}
.active text{
  font-size: 24rpx !important;
}
.on{
  width: 26rpx;
  height: 24rpx;
  display: block;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -13rpx;
}
.nav>view text{
  font-size: 22rpx;
  display: block;
  text-align: center;
  margin-top: 20rpx;
}

.content{
  position: relative;
  top: 350rpx;
  left: 0;
}

.list{}
.article{
  width: 682rpx;
  height: 204rpx;
  background: #FFFFFF;
  border: 0 solid #E3E3E3;
  box-shadow: 1rpx 0 10rpx 0 rgba(192,192,192,0.37);
  border-radius: 8rpx;
  margin: 34rpx 0 0 34rpx;
  overflow: hidden;
  display: flex;
}
.pic{
  width: 240rpx;
  height: 204rpx;
}
.article>view{
  width: 442rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}

.title{
  font-size: 28rpx;
  color: #323232;
  display: block;
}
.txt{
  font-size: 22rpx;
  font-weight: 200;
  color: #454343;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  margin-top: 14rpx;
}